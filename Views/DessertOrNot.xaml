<Window x:Class="WpfBurgerApp.Views.DessertOrNot"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Desszert választás" Height="200" Width="300">
    <Grid Margin="20">
        <Button Content="Vissza a főoldalra"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="-6,0,0,-8"
                Click="BackButton_Click"
				Background="Aquamarine"
                Width="106" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
        </StackPanel>
        <Button Content="Nem" Click="No_Click" Margin="144,63,10,41" Background="gray" />
        <Button Content="Igen" Click="Yes_Click" Margin="10,63,145,41" Background="gold"/>
        <TextBlock Text="Kérsz desszertet?" FontSize="16" HorizontalAlignment="Center" Margin="0,17,0,106" />
    </Grid>
</Window>
