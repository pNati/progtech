<Window x:Class="WpfBurgerApp.Views.OrderView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Fizetés" Height="200" Width="300">

    <Grid Margin="20,20,10,20">
        <Button Content="Vissza a főoldalra"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="-6,0,0,-8"
                Click="BackButton_Click"
                Background="Aquamarine"
                Width="106" />

        <Button Content="Fizetés"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Margin="81,120,0,0"
                Click="BackButton_Click"
                Background="Green"
                Width="120" Height="23" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" />
        </StackPanel>

        <TextBox x:Name="OrderSummaryTextBox"
                 TextWrapping="Wrap"
                 Width="200"
                 Height="81"
                 IsReadOnly="True"
                 Margin="41,0,29,52"
                 VerticalAlignment="Bottom" />

        <TextBox x:Name="TotalTextBox"
                 HorizontalAlignment="Left"
                 Margin="81,0,0,0"
                 TextWrapping="Wrap"
                 VerticalAlignment="Top"
                 Width="120"
                 IsReadOnly="True" />
    </Grid>
</Window>
