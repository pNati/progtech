<Window x:Class="WpfBurgerApp.Views.Meal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Húsos ételek" Height="200" Width="300">
    <Grid Margin="20">
        <Button Content="Vissza a fõoldalra"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="-6,0,0,-8"
                Click="BackButton_Click"
                Width="106" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal">

                <Button Width="75" Height="97" Margin="5" Click="Chicken_Click">
                    <StackPanel>
                        <Image Source="../Images/chicken.png" Width="40" Height="40" />
                        <TextBlock Text="Csirke" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button Width="75" Height="97" Margin="5" Click="Beef_Click">
                    <StackPanel>
                        <Image Source="../Images/beef.png" Width="40" Height="40" />
                        <TextBlock Text="Marha" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button Width="75" Height="97" Margin="5" Click="Pork_Click">
                    <StackPanel>
                        <Image Source="../Images/pork.png" Width="40" Height="40" />
                        <TextBlock Text="Sertés" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
