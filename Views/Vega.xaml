<Window x:Class="WpfBurgerApp.Views.Vega"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Vega Burger választás" Height="250" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>

        <Button Content="Vissza a főoldalra"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="10"
                Click="BackButton_Click"/>


        <Button Width="150" Height="80"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Click="VegaBurger_Click">

            <StackPanel Orientation="Vertical" HorizontalAlignment="Center">
                <Image Source="../Images/vega.png" Width="40" Height="40" />
                <TextBlock Text="Vega" HorizontalAlignment="Center" FontSize="16" />
            </StackPanel>
        </Button>

    </Grid>
</Window>
