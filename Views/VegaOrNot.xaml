<Window x:Class= "WpfBurgerApp.Views.VegaOrNot"
        xmlns= "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        Title = "BurgerApp - Vega vagy húsos?" Height = "400" Width= "400">
    <Grid Margin="60 30 60 30">
        <StackPanel>
            <Image Source="../Images/bigburger.png" Width="60" Height="60" />
            <Label Padding="0" Margin="0 0 0 5" Content="BurgerApp" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold"/>
            <Label Padding="0" Margin="0 0 0 40" Content="Kérlek válassz a lehetőségek közül" FontSize="12" HorizontalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.InfoTextBrushKey}}" FontWeight="Medium"/>
            <StackPanel  Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="100" Height="100" Margin="10" Click="Vega_Click">
                    <StackPanel>
                        <Image Source="../Images/vega.png" Width="40" Height="40" />
                        <TextBlock Text="Vega" HorizontalAlignment="Center" />

                    </StackPanel>
                </Button>

                <Button Width="100" Height="100" Margin="10" Click="Husos_Click">
                    <StackPanel>
                        <Image Source="../Images/meal.png" Width="40" Height="40" />
                        <TextBlock Text="Húsos" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
