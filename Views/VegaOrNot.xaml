<Window x:Class= "WpfBurgerApp.Views.VegaOrNot"
        xmlns= "http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x = "http://schemas.microsoft.com/winfx/2006/xaml"
        Title = "Vega vagy husos" Height = "200" Width= "300">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
           
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Width="100" Height="100" Margin="10" Click="Vega_Click">
                    <StackPanel>
                        <Image Source="../Images/vega.png" Width="40" Height="40" />
                        <TextBlock Text="Vega" HorizontalAlignment="Center" />
                        
                    </StackPanel>
                </Button>

                <Button Width="100" Height="100" Margin="10" Click="Husos_Click">
                    <StackPanel>
                        <Image Source="../Images/meal.png" Width="40" Height="40" />
                        <TextBlock Text="Husos" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>
                
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
