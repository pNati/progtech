<Window x:Class="WpfBurgerApp.Views.Drink"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Ital valasztas" Height="200" Width="300">
    <Grid Margin="20">
        <Button Content="Vissza a fõoldalra"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="-6,0,0,-8"
                Click="BackButton_Click"
                Width="106" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" IsEnabled="False">

                <Button Width="60" Height="97" Margin="3" Click="Water_Click">
                    <StackPanel>
                        <Image Source="../Images/water.png" Width="35" Height="35" />
                        <TextBlock Text="Víz" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button Width="60" Height="97" Margin="3" Click="Limonad_Click">
                    <StackPanel>
                        <Image Source="../Images/limonad.png" Width="35" Height="35" />
                        <TextBlock Text="Limonádé" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

                <Button Width="60" Height="97" Margin="3" Click="Beer_Click">
                    <StackPanel>
                        <Image Source="../Images/beer.png" Width="35" Height="35" />
                        <TextBlock Text="Sör" TextAlignment="Center"/>
                    </StackPanel>
                </Button>

                <Button Width="60" Height="97" Margin="3" Click="Cola_Click">
                    <StackPanel>
                        <Image Source="../Images/cola.png" Width="35" Height="35" />
                        <TextBlock Text="Kóla" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>

            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
