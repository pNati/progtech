<Window x:Class="WpfBurgerApp.Views.Pay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Fizetési mód kiválasztása" Height="200" Width="300">
    <Grid Margin="20">
        <Button Content="Vissza a főoldalra"
                HorizontalAlignment="Left"
                VerticalAlignment="Bottom"
                Margin="-6,0,0,-8"
                Click="BackButton_Click"
				Background="Aquamarine"
                Width="106" />

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" >

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center"/>
        </StackPanel>
        <Button Width="100" Height="100" Margin="150,17,10,27" Click="Cash_Click">
            <StackPanel>
                <Image Source="../Images/cash.png" Width="40" Height="40" />
                <TextBlock Text="Készpénz" HorizontalAlignment="Center" />
            </StackPanel>
        </Button>
        <Button Width="100" Height="100" Margin="10,17,150,27" Click="Creditcard_Click">
            <StackPanel>
                <Image Source="../Images/creditcard.png" Width="40" Height="40" />
                <TextBlock Text="Bankkártya" HorizontalAlignment="Center" />
            </StackPanel>
        </Button>
        <TextBlock FontSize="16" HorizontalAlignment="Center" Margin="0,-4,0,127" />
    </Grid>
</Window>
