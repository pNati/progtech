<Window x:Class="WpfBurgerApp.Views.Pay"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           Title="Fizetési mód kiválasztása" Height="450" Width="450">
    <Grid Margin="60 30 60 30">
        <StackPanel>
            <Image Source="../Images/bigburger.png" Width="60" Height="60" />
            <Label Padding="0" Margin="0 0 0 5" Content="BurgerApp" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold"/>
            <Label Padding="0" Margin="0 0 0 40" Content="Válassz fizetési módot" FontSize="12" HorizontalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.InfoTextBrushKey}}" FontWeight="Medium"/>
            <Grid VerticalAlignment="Center" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <Button Height="100" Grid.Column="0" Margin="0 0 5 0" Click="Cash_Click">
                    <StackPanel>
                        <Image Source="../Images/cash.png" Width="40" Height="40" />
                        <TextBlock Text="Készpénz" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>
                <Button Height="100" Grid.Column="1" Margin="5 0 0 0" Click="Creditcard_Click">
                    <StackPanel>
                        <Image Source="../Images/creditcard.png" Width="40" Height="40" />
                        <TextBlock Text="Bankkártya" HorizontalAlignment="Center" />
                    </StackPanel>
                </Button>
            </Grid>
            <Button Margin="0 10 0 0" Content="Vissza a főoldalra"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Bottom"
                Height="50" 
                Click="BackButton_Click"
                Background="Aquamarine"
             />
        </StackPanel>
    </Grid>
</Window>
