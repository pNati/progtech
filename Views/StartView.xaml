<Window x:Class="WpfBurgerApp.Views.StartView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start" Height="400" Width="400">
    <Grid Margin="60 30 60 30">
        <StackPanel>
            <Image Source="../Images/bigburger.png" Width="60" Height="60" />
            <Label Padding="0" Margin="0 0 0 5" Content="BurgerApp" FontSize="24" HorizontalAlignment="Center" FontWeight="Bold"/>
            <Label Padding="0" Margin="0 0 0 40" Content="Készen állsz a rendelésre?" FontSize="12" HorizontalAlignment="Center" Foreground="{DynamicResource {x:Static SystemColors.InfoTextBrushKey}}" FontWeight="Medium"/>
            <Button Content="Kezdjük a rendelést!" Height="50" Click="Kezdjuk_Click" HorizontalAlignment="Stretch" Background="gold"/>
            <Label x:Name="ordersCountLabel" Content="Rendelések száma: 0" HorizontalAlignment="Center" Margin="0 20 0 0"/>
        </StackPanel>
    </Grid>
</Window>
